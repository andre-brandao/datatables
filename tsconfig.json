{
    "extends": "./.svelte-kit/tsconfig.json",
    "moduleResolution": "NodeNext",
    "compilerOptions": {
        "paths": {
            "$site": ["./src/site"],
            "$site/*": ["./src/site/*"],
            "$lib": ["./src/lib"],
            "$lib/*": ["./src/lib/*"],
        }
    },
    "strictNullChecks": false,
    "noImplicitAny": true
}
